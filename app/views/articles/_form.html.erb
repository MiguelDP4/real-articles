<%= form_with(model: @article, local: true) do |f| %>
  <div class="form-group w-100 h-100">
    <%= f.text_field :title, placeholder: "Type your article title here...", class: "form-control" %>
    <%= f.text_area :content, placeholder: "Compose your article here...", class: "form-control" %>
    <%= f.text_field :image, placeholder: "Paste an image url here", class: "form-control", id: "image-src" %>
  </div>

  <%= f.submit "Publish", class: "btn btn-dark" %>
<% end %>