<%= form_tag("/search", :method => "get") do %>  
  <div class="input-group ml-3">  
    <%= search_field_tag :search_term, params[:search], placeholder: "Search an article", class: "form-control" %>  
    <div class="input-group-append">  
      <%= button_tag "", class: 'btn btn-secondary fa fa-search', name: nil %>  
    </div>  
  </div>  
<% end %>